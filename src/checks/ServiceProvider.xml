   <id>ServiceProvider.1</id>
   <name>Service Provider</name>
   <description>Checks that a service provider exists.</description>
   <type>FAIR-Accessible</type>
   <level>OPTIONAL</level>
   <environment>python</environment>
   <code><![CDATA[
def call():
  global output
  global status

  if ('ServiceProvider' in globals() and ServiceProvider is not None and ServiceProvider):
    output = "A service provider is present"
    status = "SUCCESS"
    return True
  else:
    output = "A service provider is not present"
    status = "FAILURE"
    return False

      ]]></code>
   <selector>
